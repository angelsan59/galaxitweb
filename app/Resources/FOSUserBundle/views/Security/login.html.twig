{% extends "@FOSUser/layout.html.twig" %}

{% block fos_user_content %}
     <div>
         <h2>Connexion au site Galax-IT</h2>
              
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <h3>Bienvenue, {{ app.user.username }} !</h3>
                
                {% if is_granted("ROLE_ADMIN") %}
                     <p class="section-description">En tant que membre admin, vous pouvez accéder à la <a href="admin">Section Administration</a></p>       
                {% endif %}    
                <p class="section-description">Vous pouvez désormais consulter votre profil, vous enregistrer aux évènements, vous abonner à la news letter, etc - 
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a></p>
            {% else %}
                 <p class="section-description">Veuillez vous identifier ci-dessous. 
                     Si c'est votre première visite, <a href="{{ path('fos_user_registration_register') }}"><b>inscrivez-vous ici</b></a>.</p>
                
                {{ include('@FOSUser/Security/login_content.html.twig') }}
            {% endif %}
        </div>
    
{% endblock fos_user_content %}
