{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
   
<div class="form-group">
    <label for="username" class="control-label col-sm-4">Identifiant ou adresse email</label>
    <div class="col-sm-8">
    <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
    </div>
</div>
<div class="form-group">
    <label for="password" class="control-label col-sm-4">Mot de passe</label>
    <div class="col-sm-8">
    <input type="password" class="form-control" id="password" name="_password" required="required" />
    </div>
</div>
<div class="form-group"> 
    <div class="col-sm-offset-4 col-sm-8">    
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">Se souvenir de moi</label>
</div>
</div>
    <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </div>
</div>
</form>
