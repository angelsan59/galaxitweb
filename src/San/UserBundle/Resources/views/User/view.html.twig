{% extends "SanAdminBundle::layout.html.twig" %}

{% block title %}
  Utilisateur - {{ parent() }}
{% endblock %}

{% block body %}

  <h2>{{ user.nom }} - {{ user.prenom }}</h2>
  <i>inscrit le {{ user.dateMod|date('d/m/Y') }}</i>
 {% for flash_message in app.session.flashBag.get('notice') %}
    <div class="flash-notice">
        {{ flash_message }}
    </div>
{% endfor %}
  <div class="well">
    {{ user.username }}
    </div>
     <div class="well">
    {# On vérifie qu'une image soit bien associée à l'evenement #}
{% if user.image is not null %}
  <img src="{{ asset(user.image.webPath) }}" alt="{{ user.image.alt }}">
{% endif %}

  </div>

  <p>
    
    <a href="{{ path('san_user_edit', {'id': user.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier l'utilisateur
    </a>
    <a href="{{ path('san_user_delete', {'id': user.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer l'utilisateur
    </a>
  </p>

{% endblock %}
