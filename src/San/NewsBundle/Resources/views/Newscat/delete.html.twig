
{% extends "SanAdminBundle::layout.html.twig" %}

{% block title %}
  Supprimer une catégorie de news - {{ parent() }}
{% endblock %}

{% block body %}

  <h3 class="bgblue">Supprimer une catégorie de news</h3>
{% for message in app.session.flashbag.get('info') %}
        <div class="alert alert-info">Message flash : {{ message }}</div>
      {% endfor %}
 <div class="well"> <p>
    Etes-vous certain de vouloir supprimer la catégorie "{{ newscat.nom }}" ?
  </p>

  {# On met l'id de la news dans la route de l'action du formulaire #}
  <form action="{{ path('san_newscat_delete', {'id': newscat.id}) }}" method="post">
    <a href="{{ path('san_newscat_homepage') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste des catégories
    </a>
    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
  </form>
</div>
{% endblock %}
