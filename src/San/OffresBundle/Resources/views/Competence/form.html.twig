<div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {# Les erreurs générales du formulaire. #}
  {{ form_errors(form) }}

  <div class="row">
      <div class="col-sm-8">
 <div class="form-group">
    {# Génération du label. #}
    {{ form_label(form.titre, "Titre de l'offre", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

    {# Affichage des erreurs pour ce champ précis. #}
    {{ form_errors(form.titre) }}

    <div class="col-sm-10">
      {# Génération de l'input. #}
      {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  {# Idem pour un autre champ. #}
  <div class="form-group">
    {{ form_label(form.content, "Contenu de l'offre", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.content) }}
    <div class="col-sm-10">
      {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>
  
  <div class="form-group">
    {{ form_label(form.mission, "Mission", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.mission) }}
    <div class="col-sm-10">
      {{ form_widget(form.mission, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div> 
   
  <div class="form-group">
    {{ form_label(form.formation, "Formation", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.formation) }}
    <div class="col-sm-10">
      {{ form_widget(form.formation, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>  
      </div>  
      <div class="col-sm-4">
           {{ form_rest(form) }}
 {{ form_row(form.published) }}
  {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
  {{ form_widget(form.Enregistrer, {'attr': {'class': 'btn btn-info'}}) }}
  {# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(form) }}
  {{ form_row(form.fin) }}
      </div>
  </div>
</div>