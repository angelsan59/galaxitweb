
{% extends "SanAdminBundle::layout.html.twig" %}

{% block title %}
  Accueil Candidatures - {{ parent() }}
{% endblock %}

{% block body %}
{% for message in app.session.flashbag.get('info') %}
        <div class="alert alert-info">Message flash : {{ message }}</div>
      {% endfor %}
  <h2 class="bgblue">Liste des candidatures</h2>
<div class="well table-responsive">
    <table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Offre</th>
        <th>Candidat</th>
        <th>Disponibilité</th>
        <th>Statut</th>
      </tr>
    </thead>
    <tbody>
       {% for cand in listCandidatures %}
     <tr>
        <td>{{ cand.pubDate|date('d/m/Y') }}</td>
        <td> <a href="{{ path('san_offre_view', {'id': cand.offre.id}) }}">{{ cand.offre.titre }}</a></td>
        <td><a href="{{ path('san_candidats_view', {'id': cand.id}) }}">{{ cand.user.prenom }} {{ cand.user.nom }}</a>
            <br/><small>{{ cand.content }}</small></td>
        <td>{{ cand.dateDispo|date('d/m/Y') }}</td>
        <td>{{ cand.statut.nom }} {{ render(controller("SanOffresBundle:Candidature:changestatut", {'id': cand.id})) }}</td>
      </tr>
       {% endfor %} 
        
     
    </tbody>
  </table>
    
</div>
  <ul class="pagination">
    {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
    {% for p in range(1, nbPages) %}
      <li{% if p == page %} class="active"{% endif %}>
        <a href="{{ path('san_candidats_liste', {'page': p}) }}">{{ p }}</a>
      </li>
    {% endfor %}
  </ul>

{% endblock %}

