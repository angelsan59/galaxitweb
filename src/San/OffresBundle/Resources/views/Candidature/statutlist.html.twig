
{% extends "SanAdminBundle::layout.html.twig" %}

{% block title %}
  Accueil candidatures - {{ parent() }}
{% endblock %}

{% block body %}

    <h3 class="bgblue">Liste des candidatures classés <b>{{ statut.nom }}</b></h3>
<div class="well table-responsive">
    <table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Offre</th>
        <th>Candidat</th>
        <th>Disponibilité</th>
        <th>Statut</th>
      </tr>
    </thead>
    <tbody>
       {% for candidature in listCandidatures %}
     <tr>
        <td>{{ candidature.pubDate|date('d/m/Y') }}</td>
        <td> <a href="{{ path('san_offre_view', {'id': candidature.offre.id}) }}">{{ candidature.offre.titre }}</a></td>
        <td><a href="{{ path('san_candidats_view', {'id': candidature.id}) }}">{{ candidature.user.prenom }} {{ candidature.user.nom }}</a></td>
        <td>{{ candidature.dateDispo|date('d/m/Y') }}</td>
        <td>{{ candidature.statut.nom }}</td>
      </tr>
       {% endfor %} 
        
     
    </tbody>
  </table>
    
</div>
 

{% endblock %}


