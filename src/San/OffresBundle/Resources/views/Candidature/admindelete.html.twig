{% extends "SanAdminBundle::layout.html.twig" %}
{% block title %}
  Suppression de candidature - {{ parent() }}
{% endblock %}

{% block body %}

  <h3 class="bgblue">Supprimer une candidature</h3>
{% for message in app.session.flashbag.get('info') %}
        <div class="alert alert-success">{{ message }}</div>
      {% endfor %}
 <div class="well"> <p>
    Etes-vous certain de vouloir supprimer votre candidature à l'annonce "{{ candidature.offre.titre }}" ?
  </p>

  {# On met l'id de l'annonce dans la route de l'action du formulaire #}
  <form action="{{ path('san_candidats_delete', {'id': candidature.id}) }}" method="post">
    <a href="{{ path('san_user_profil') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à vorte profil
    </a>
    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
  </form>
</div>
{% endblock %}
