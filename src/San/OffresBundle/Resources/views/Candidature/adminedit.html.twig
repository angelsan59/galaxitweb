{% extends "SanAdminBundle::layout.html.twig" %}

{% block title %}
  Modifier une candidature - {{ parent() }}
{% endblock %}

{% block body %}

  <h2>Modifier une candidature à l'offre {{ candidature.offre.titre }}</h2>
  
  {% for message in app.session.flashbag.get('info') %}
        <div class="alert alert-success">{{ message }}</div>
      {% endfor %}

       {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {# Les erreurs générales du formulaire. #}
  {{ form_errors(form) }}
 <div class="container">
 <div class="row">
      <div class="col-sm-7">
           <div class="panel panel-primary">
        <div class="panel-heading"><b>Profil professionnel</b></div>
  <div class="panel-body"> 
      <div class="candform">{{ form_widget(form.content) }}
      </div></div>
</div>
  
   
   <div class="panel panel-primary">
        <div class="panel-heading"><b>Web et Media</b></div>
  <div class="panel-body"> 
      <div class="candform"> {{ form_row(form.web) }}
    {{ form_row(form.linkdn) }}
    {{ form_row(form.viadeo) }}
    {{ form_row(form.twitter) }}
      </div></div>
</div>
    
      <div class="panel panel-primary">
        <div class="panel-heading"><b>Fiche "Profil Candidat"</b></div>
  <div class="panel-body"> 
      <div class="candform">  
          <p>Galax-IT demande à tous les candidats de répondre aux questions 
              suivantes afin d'élaborer votre profil candidat. </p>        
    {{ form_row(form.formation) }}
    {{ form_row(form.realisations) }}
    {{ form_row(form.techno) }}
    {{ form_row(form.evolution) }}
      </div></div>
</div>
    </div>
    <div class="col-sm-4">
          {{ form_rest(form) }}
   
    {{ form_end(form) }}
    </div></div></div>
<script type="text/javascript">
         
$('.js-example-basic-multiple').select2();
</script>

{% endblock %}
