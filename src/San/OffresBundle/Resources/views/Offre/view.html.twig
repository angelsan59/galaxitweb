{% extends "SanAdminBundle::layout.html.twig" %}

{% block title %}
  Offre - {{ parent() }}
{% endblock %}

{% block body %}

  <h2>{{ offre.titre }}</h2>
  <i>Par {{ offre.user.username }}, le {{ offre.pubDate|date('d/m/Y') }}</i>
 {% for flash_message in app.session.flashBag.get('notice') %}
    <div class="flash-notice">
        {{ flash_message }}
    </div>
{% endfor %}
  <div class="well">
       {% if offre.imageName is not null %}
  <img src="{{ vich_uploader_asset(offre, 'imageFile') }}" alt="{{ offre.imageName }}" align="right">
{% endif %}
    {{ offre.content }}
    </div>
<div class="row">
               <div class="col-md-12 dark">
                   Formation
               </div>
      </div>
  <div class="row">
    <div class="well">
    {{ offre.formation }}
    </div></div>
     <div class="row">
               <div class="col-md-12 dark">
                   Mission
               </div>
      </div>
     <div class="row">
 <div class="well">
    {{ offre.mission }}
 </div></div>
     
{% if not offre.categories.empty %}
     <div class="row">
               <div class="col-md-12 dark">
                   Catégories
               </div>
      </div>
      <div class="row">
  <div class="well">
      <ul>
    {% for category in offre.categories %}
        <li>{{ category.nom }}</li>
    {% endfor %}
      </ul>
  </div></div>
{% endif %}

{% if not offre.competences.empty %}
  <div class="row">
               <div class="col-md-12 dark">
                   Compétences nécessaires
               </div>
      </div>
   <div class="row">
  <div class="well">
      <ul>
    {% for competence in offre.competences %}
        <li>{{ competence.nom }}</li>
    {% endfor %}
      </ul></div></div>
{% endif %}

  </div>

  <p>
    
    <a href="{{ path('san_offre_edit', {'id': offre.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier l'offre
    </a>
    <a href="{{ path('san_offre_delete', {'id': offre.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer l'offre
    </a>
  </p>

{% endblock %}
