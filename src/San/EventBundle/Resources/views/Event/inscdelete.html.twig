{% extends "SanCoreBundle::layoutpages.html.twig" %}
{% block title %}
  Supprimer une inscription evenement - {{ parent() }}
{% endblock %}

{% block body %}

  <h3 class="bgblue">Se désinscrire d'un évènement</h3>
  <p>
    Etes-vous certain de vouloir supprimer votre inscription à "{{ inscription.event.titre }}" ?
  </p>

  {# On met l'id de la news dans la route de l'action du formulaire #}
  <form action="{{ path('san_insc_deletepub', {'id': inscription.id}) }}" method="post">
    <a href="{{ path('san_user_profil') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour au profil
    </a>
    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
  </form>

{% endblock %}

