
{% extends "SanAdminBundle::layout.html.twig" %}

{% block title %}
  Liste des inscriptions - {{ parent() }}
{% endblock %}

{% block body %}

  <h2 class="bgblue">Liste des inscriptions</h2>
<div class="well">
  <ul>
    {% for offre in listOffres %}
      <li>
        
          <a href="{{ path('san_offre_view', {'id': offre.id}) }}">{{ offre.titre }}</a>
        
        par {{ offre.user.username }},
        le {{ offre.pubDate|date('d/m/Y') }}
      </li>
    {% else %}
      <li>Pas (encore !) d'offres</li>
    {% endfor %}
  </ul>
</div>
  <ul class="pagination">
    {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
    {% for p in range(1, nbPages) %}
      <li{% if p == page %} class="active"{% endif %}>
        <a href="{{ path('san_offre_homepage', {'page': p}) }}">{{ p }}</a>
      </li>
    {% endfor %}
  </ul>

{% endblock %}

