
  {% for event in listEvents %}
<div class="panel panel-primary">
      <div class="panel-heading"><b>{{ event.titre }}</b></div>
    <div class="panel-body">
        {% if event.imageName is not null %}
  <img src="{{ vich_uploader_asset(event, 'imageFile') }}" alt="{{ event.imageName }}" width="200px">
{% endif %}
        {{ event.content }}
     <br/><br/>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <a href="{{ path('san_insc_addpub', {'id': event.id}) }}" class="btn btn-info">
      <i class="glyphicon glyphicon-edit"></i>
      Inscrivez-vous
    </a>
         
         {% else %}
        <a href="{{ path('san_insc_addpub', {'id': event.id}) }}" class="btn btn-info">
      <i class="glyphicon glyphicon-edit"></i>Inscrivez-vous</a>
        {% endif %}
         </div>
    
      <div class="panel-footer">
        {{ event.eventDate|date('d/m/Y') }} - {{ event.adresse }} 
      </div></div>  

        <!-- Modal Inscription logge -->
<div id="eve1-modal" class="modal fade" role="dialog" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog">

       <div class="loginmodal-container">
           <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h1 class="modal-title">Inscription à l'évènement</h1>
       {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    <p>Connecté en tant que {{ app.user.username }}
        -
    <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></p>
    {{ render(controller("SanEventBundle:InscriptionEvent:addpub",{'id': 2})) }}
{% else %}
    <p> Déjà inscrit? Loggez-vous !</p>   
 {% endif %}      
          
     
    </div>

  </div>
</div> 
  <!-- fin modal -->
{% endfor %}

    