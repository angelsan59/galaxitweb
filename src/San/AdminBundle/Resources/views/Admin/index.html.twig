                </div>
                <div class="panel-body">
                    <ul>
                    {% for rdv in listRdvs %}
                        <li> {{ rdv.dateRdv|date('d/m/Y H:i') }} <a href="{{ path('san_user_view', {'id': rdv.id}) }}">{{ rdv.prenom }} {{ rdv.nom }}</a></li>
