                        </ul>
                    </li>
                    <li><a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-address-card-o"></i> Candidats<span class="caret"></span></a>
                        <ul class="dropdown-menu">

                            <li><a href="{{ path('san_candidats_liste') }}"><i class="fa fa-list"></i> Gestion des candidats</a></li>
                            {{ render(controller("SanUserBundle:Statut:liste")) }}
                            </ul>
                    </li>
                    <li><a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-calendar"></i> Evènements<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('san_event_add') }}"><i class="fa fa-calendar-plus-o"></i> Nouvel évènement</a></li>
                            <li><a href="{{ path('san_event_homepage') }}"><i class="fa fa-list"></i> Gestion des évènements</a></li>
                        </ul>
                    </li>
                      <li><a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-newspaper-o"></i> News<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('san_news_add') }}"><i class="fa fa-plus"></i> Nouvelle news</a></li>
                            <li><a href="{{ path('san_news_homepage') }}"><i class="fa fa-list"></i> Gestion des news</a></li>
                            <li><a href="{{ path('san_newscat_homepage') }}"><i class="fa fa-list"></i> Gestion des catégories news</a></li>
                        </ul>
                    </li>
                    <li><a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-file-text-o"></i> Newsletter<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('san_newsletter_add') }}"><i class="fa fa-plus"></i> Nouvelle newsletter</a></li>
                            <li><a href="{{ path('san_newsletter_homepage') }}"><i class="fa fa-list"></i> Archive des newsletters</a></li>
                            <li><a href="{{ path('san_abonnes_homepage') }}"><i class="fa fa-group"></i> Abonnés à la newsletter</a></li>
                        </ul>
                    </li>
